datasource db {
  provider = "sqlite"
  url = env("CONNECTION_STRING")
}

generator client {
  provider = "prisma-client-js"
}

model Anime {
  id Int @id @map("_id")
  idMal Int
  title Json
  description String
  meanScore Int
  genres String[]
  source String
  coverImage Json
  synonyms String[]
}

model Manga {
  id Int @id @map("_id")
  idMal Int
  title Json
  description String
  meanScore Int
  genres String[]
  source String
  coverImage Json
  synonyms String[]
}

model List {
  id Int @id @map("_id")
  uid String
  animeList Int[]
  mangaList Int[]
}