// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Anime {
  id Int @id @default(autoincrement())
  idMal Int
  Title Int
  descrition String
  meanScore Int
  genres String[]
  source String
  synonyms String[]
  CoverImage Int
}

model Manga {
  id Int @id @default(autoincrement())
  idMal Int
  Title Int
  descrition String
  meanScore Int
  genres String[]
  source String
  synonyms String[]
  CoverImage Int
}

model Title {
  id Int @id @default(autoincrement())
  romanji String
  english String
  native String
  userPreferred String
}

model CoverImage {
  id Int @id @default(autoincrement())
  extraLarge String
  large String
  medium String
  color String
}

model List {
  id Int @id @default(autoincrement())
  uid String
  animeList Int[]
  mangaList Int[]
}