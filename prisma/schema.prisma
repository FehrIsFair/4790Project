datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Anime {
  id           Int         @id @default(autoincrement())
  idMal        Int
  title        Title?      @relation(fields: [titleID], references: [id])
  titleID      Int?
  descrition   String
  meanScore    Int
  genres       String[]
  source       String
  synonyms     String[]
  coverImage   CoverImage? @relation(fields: [coverImageId], references: [id])
  coverImageId Int?
}

model Manga {
  id           Int         @id @default(autoincrement())
  idMal        Int
  title        Title?      @relation(fields: [titleID], references: [id])
  titleID      Int?
  descrition   String
  meanScore    Int
  genres       String[]
  source       String
  synonyms     String[]
  coverImageID Int?
  coverImage   CoverImage? @relation(fields: [coverImageID], references: [id])
}

model Title {
  id            Int     @id @default(autoincrement())
  romanji       String
  english       String
  native        String
  userPreferred String
  Anime         Anime[]
  Manga         Manga[]
}

model CoverImage {
  id         Int     @id @default(autoincrement())
  extraLarge String
  large      String
  medium     String
  color      String
  Anime      Anime[]
  Manga      Manga[]
}

model List {
  id        Int    @id @default(autoincrement())
  uid       String
  animeList Int[]
  mangaList Int[]
}
