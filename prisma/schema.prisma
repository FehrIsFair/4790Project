datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model anime {
  id          Int      @id @default(autoincrement())
  idMal       Int
  title       String
  description String
  meanScore   Int
  genres      String[]
  source      String
  synonyms    String[]
  coverImage  String
  type        String
}

model manga {
  id          Int      @id @default(autoincrement())
  idMal       Int
  title       String
  description String
  meanScore   Int
  genres      String[]
  source      String
  synonyms    String[]
  coverImage  String
  type        String
}

model list {
  id        Int    @id @default(autoincrement())
  uid       String
  animeList Int[]
  mangaList Int[]
}
