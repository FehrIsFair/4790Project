// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Anime {
  id Int @id @map("_id")
  idMal Int
  title Json
  descrition String
  meanScore Int
  genres String[]
  source String
  synonyms String[]
  coverImage Json
}

model Manga {
  id Int @id @map("_id")
  idMal Int
  title Json
  descrition String
  meanScore Int
  genres String[]
  source String
  synonyms String[]
  coverImage Json
}

model List {
  id Int @id @map("_id")
  uid String
  animeList Int[]
  mangaList Int[]
}