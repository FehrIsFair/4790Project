datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Anime {
  id Int @id @default(autoincrement())
  idMal Int
  title Title @relation(fields: [titleID], references: [id])
  titleID Int
  descrition String
  meanScore Int
  genres String[]
  source String
  synonyms String[]
  coverImage CoverImage @relation(fields: [coverImageID], references: [id])
  coverImageID Int
}

model Manga {
  id Int @id @default(autoincrement())
  idMal Int
  title Title @relation(fields: [titleID], references: [id])
  titleID Int
  descrition String
  meanScore Int
  genres String[]
  source String
  synonyms String[]
  coverImageID Int
  coverImage CoverImage @relation(fields: [coverImageID], references: [id])
}

model Title {
  id Int @id @default(autoincrement())
  romanji String
  english String
  native String
  userPreferred String
}

model CoverImage {
  id Int @id @default(autoincrement())
  extraLarge String
  large String
  medium String
  color String
}

model List {
  id Int @id @default(autoincrement())
  uid String
  animeList Int[]
  mangaList Int[]
}